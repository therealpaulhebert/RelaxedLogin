{{>header}}

<script type="text/javascript">
$(document).ready( function () {
  $("form").submit( function(event) {
    let p = $("#password").val();
    let cp = $("#password_confirm").val();
    let pwError = "<div class=\"alert alert-danger\" role=\"alert\">"
                  +"Passwords must match"
                  +"</div>";
    if( p !== cp ){
      $("#pass-conf-feedback").html(pwError);
      event.preventDefault();
    };
  });

  $("#password_confirm").change( function() {
    $("#pass-conf-feedback").html(" ");
  });

});
</script>

<h1>{{h1}}</h1>
<div class="row">
  <div class="col">
<form action="/newUser" method="post" class="newUser">
      <div class="form-group">
        <label for="name">User Name</label>
        <input type="text" id="name" name="name" class="form-control" required ></input>
      </div>

      <div class="form-group">
        <label for="description">Password</label>
        <input type="password" id="password" name="password" class="form-control" required></input>
      </div>

      <div class="form-group">
        <label for="password_confirm">Confirm Password</label>
        <input type="password" id="password_confirm" name="password_confirm" class="form-control" required></input>
      </div>
        <div id="pass-conf-feedback">

        </div>
    <input name="_csrf" type="hidden" value="{{_csrf.token}}" />
    <button class="btn btn-primary ml-auto" type="submit" id="newUser">Submit</button>
</form>
</div>

  <div class="col">
<img class="img-fluid" src="/images/puppysil2sm.png"/>
  </div>

</div>
</div>
{{>footer}}
